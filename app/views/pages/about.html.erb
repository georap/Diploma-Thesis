<html>
<head>
  
  <title>Google Maps Multiple Markers</title>
  <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
</head>
<body>
  <div id="map" style="height: 400px; width: 500px;">
</div>
<script type="text/javascript">
    var locations = <%=@addresses%>;
    var centerlat=<%=@station_items.find_by_name("Σπυρίδων Ζαφειρόπουλος του Αλεξάνδρου").latitude%>;
    var centerlong=<%=@station_items.find_by_name("Σπυρίδων Ζαφειρόπουλος του Αλεξάνδρου").longitude%>;
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 5,
      center: new google.maps.LatLng(centerlat, centerlong),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    //var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) { 
    	var name=locations[i].name;
    	var addr=locations[i].address;
    	var lat=locations[i].latitude;
    	var long=locations[i].longitude;

      marker = new google.maps.Marker({
        position: new google.maps.LatLng(lat, long),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(name+" "+addr);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
</body>
</html>