<div class="mx-auto" style="width: 650px;">
	<h1> Νέος Σταθμός Υγρών Καυσίμων </h1>
</div><br>

			
<div class="mx-auto" style="width: 300px;">
	<%= form_for(@station_item) do |f| %>
		<div class="field">

		<%= f.text_field :name,:required => true, :autocomplete => :off,placeholder: "Ονομα"%>
		</div>
		
		<div class="field">
		<%=f.label :latitude%>
		<%= f.text_field :latitude, :value => @newLatLong[0],:readonly => true%>
		</div>

		<div class="field">
		<%=f.label :longitude%>
		<%= f.text_field :longitude,:value => @newLatLong[1],:readonly => true%>
		</div>

		<div class="field">
		<%=f.label :area%>
		<%= f.text_field :area,:value => @area,:readonly => true%>
		</div>

		<div class="field">
		<%=f.label :company%>
		<%= f.text_field :company,:required => true, :autocomplete => :off,placeholder: "Εταιρεία Καυσίμου"%>
		</div>

		<div class="actions">
		<%=f.submit %>
		</div>

<%end %>
</div>
